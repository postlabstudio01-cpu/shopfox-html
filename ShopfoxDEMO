                icon: "fas fa-spa",
                amazonPrice: 999,
                flipkartPrice: 899,
                amazonLink: "https://www.amazon.in/dp/B0B4ZJ7W7X",
                flipkartLink: "https://www.flipkart.com/yoga-mat/p/itm0f3c3b3a0a1b4"
            }
        ];

        // DOM elements
        const productsGrid = document.getElementById('productsGrid');
        const searchInput = document.getElementById('searchInput');
        const searchBtn = document.getElementById('searchBtn');
        const categoryBtns = document.querySelectorAll('.category-btn');

        // Initialize the page
        document.addEventListener('DOMContentLoaded', () => {
            displayProducts(products);
            
            // Search functionality
            searchBtn.addEventListener('click', searchProducts);
            searchInput.addEventListener('keyup', (e) => {
                if (e.key === 'Enter') {
                    searchProducts();
                }
            });
            
            // Category filter
            categoryBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    // Update active button
                    categoryBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    
                    // Filter products
                    const category = btn.getAttribute('data-category');
                    if (category === 'all') {
                        displayProducts(products);
                    } else {
                        const filtered = products.filter(p => p.category === category);
                        displayProducts(filtered);
                    }
                });
            });
        });

        // Display products
        function displayProducts(productsToShow) {
            productsGrid.innerHTML = '';
            
            if (productsToShow.length === 0) {
                productsGrid.innerHTML = '<p style="grid-column: 1/-1; text-align: center; font-size: 1.2rem;">No products found. Try a different search term.</p>';
                return;
            }
            
            productsToShow.forEach(product => {
                const isAmazonCheaper = product.amazonPrice < product.flipkartPrice;
                
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image">
                        <img src="${product.image}" alt="${product.name}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="fallback-icon" style="display: none; align-items: center; justify-content: center; width: 100%; height: 100%;">
                            <i class="${product.icon}" style="font-size: 4rem; color: var(--gray);"></i>
                        </div>
                    </div>
                    <div class="product-info">
                        <h3 class="product-name">${product.name}</h3>
                        <div class="price-comparison">
                            <div class="price-box amazon ${isAmazonCheaper ? 'best-price' : ''}">
                                <div class="price-label">Amazon</div>
                                <div class="price-value">₹${product.amazonPrice.toLocaleString('en-IN')}</div>
                            </div>
                            <div class="price-box flipkart ${!isAmazonCheaper ? 'best-price' : ''}">
                                <div class="price-label">Flipkart</div>
                                <div class="price-value">₹${product.flipkartPrice.toLocaleString('en-IN')}</div>
                            </div>
                        </div>
                        <div class="product-actions">
                            <a href="${product.amazonLink}" target="_blank" class="btn btn-amazon">View on Amazon</a>
                            <a href="${product.flipkartLink}" target="_blank" class="btn btn-flipkart">View on Flipkart</a>
                        </div>
                    </div>
                `;
                
                productsGrid.appendChild(productCard);
            });
        }

        // Search products
        function searchProducts() {
            const searchTerm = searchInput.value.trim().toLowerCase();
            
            if (searchTerm === '') {
                displayProducts(products);
                return;
            }
            
            const filtered = products.filter(product => 
                product.name.toLowerCase().includes(searchTerm) ||
                product.category.toLowerCase().includes(searchTerm)
            );
            
            displayProducts(filtered);
        }
    </script>
</body>
